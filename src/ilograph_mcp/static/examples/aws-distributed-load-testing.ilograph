          instanceOf: AWS::CloudFront::CloudFrontOriginAccessIdentity
        - name: Console Cloud Front
          instanceOf: AWS::CloudFront::Distribution
          description: Distribution for static Testing Console files
    - name: CodeBuild
      instanceOf: AWS::CodeBuild

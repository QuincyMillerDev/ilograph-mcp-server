      children:
        - name: Scenarios Table
          instanceOf: AWS::DynamoDB::Table
          description: Stores active tests, also called "scenarios"
        - name: Results Table
          instanceOf: AWS::DynamoDB::Table
          description: Stores testing results
    - name: CloudFront
